<h2>Your Posts:</h2>

{{#if posts.length}}
    {{#each posts as |post|}}
    {{>post-info post}}
    <br>
        <a href="/dashboard/edit/{{post.id}}"><button class="btn editPostButton">Edit Post</button></a>
    <br>
    {{/each}}
{{else}}
<!-- youve got no posts-->
<br>
<div class="noPosts">
<div class="alert alert-warning noPosts" role="alert">
    You have no posts!
</div>
</div>
